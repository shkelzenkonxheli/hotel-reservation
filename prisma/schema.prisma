generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model reservations {
  id                       Int             @id @default(autoincrement())
  user_id                  Int?
  room_id                  Int?
  start_date               DateTime        @db.Date
  end_date                 DateTime        @db.Date
  status                   String?         @default("pending") @db.VarChar(50)
  created_at               DateTime?       @default(now()) @db.Timestamp(6)
  full_name                String?         @db.VarChar(100)
  phone                    String?         @db.VarChar(50)
  address                  String?         @db.VarChar(255)
  guests                   Int?
  total_price              Decimal?        @db.Decimal(10, 2)
  reservation_code         String?         @unique @db.VarChar(20)
  client_hidden            Boolean         @default(false)
  client_hidden_at         DateTime?       @db.Timestamp(6)
  cancelled_at             DateTime?       @db.Timestamp(6)
  cancel_reason            String?         @db.VarChar(255)
  admin_hidden             Boolean         @default(false)
  admin_hidden_at          DateTime?       @db.Timestamp(6)
  stripe_session_id        String?         @db.VarChar(255)
  stripe_payment_intent_id String?         @db.VarChar(255)
  payment_status           String          @default("UNPAID") @db.VarChar(30)
  amount_paid              Decimal         @default(0) @db.Decimal(10, 2)
  paid_at                  DateTime?       @db.Timestamp(6)
  invoice_number           String?         @db.VarChar(50)
  notifications            notifications[]
  rooms                    rooms?          @relation(fields: [room_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  users                    users?          @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model rooms {
  id           Int            @id @default(autoincrement())
  room_number  String         @db.VarChar(10)
  type         String         @db.VarChar(50)
  price        Decimal        @db.Decimal(10, 2)
  status       String?        @default("available") @db.VarChar(50)
  images       String[]
  name         String         @default("Unknown Room") @db.VarChar(255)
  description  String?
  reservations reservations[]
}

model users {
  id            Int             @id @default(autoincrement())
  name          String          @db.VarChar(100)
  email         String          @unique @db.VarChar(100)
  password      String          @db.VarChar(200)
  role          String          @default("client") @db.VarChar(50)
  phone         String?         @db.VarChar(50)
  address       String?
  created_at    DateTime        @default(now()) @db.Timestamp(6)
  notifications notifications[]
  reservations  reservations[]
}

model activity_logs {
  id           Int       @id @default(autoincrement())
  action       String    @db.VarChar(50)
  entity       String    @db.VarChar(50)
  entity_id    Int?
  description  String?
  performed_by String?   @db.VarChar(50)
  created_at   DateTime? @default(now()) @db.Timestamp(6)
}

model RoomImage {
  id        Int      @id @default(autoincrement())
  type      String   @db.VarChar(50)
  url       String
  order     Int      @default(0)
  isCover   Boolean  @default(false)
  createdAt DateTime @default(now()) @db.Timestamp(6)

  @@index([type])
}

model notifications {
  id             Int           @id @default(autoincrement())
  type           String        @db.VarChar(50)
  title          String        @db.VarChar(255)
  message        String
  reservation_id Int?
  user_id        Int?
  is_read        Boolean       @default(false)
  created_at     DateTime      @default(now()) @db.Timestamp(6)
  reservations   reservations? @relation(fields: [reservation_id], references: [id], onUpdate: NoAction, map: "fk_notification_reservation")
  users          users?        @relation(fields: [user_id], references: [id], onUpdate: NoAction, map: "fk_notification_user")
}
